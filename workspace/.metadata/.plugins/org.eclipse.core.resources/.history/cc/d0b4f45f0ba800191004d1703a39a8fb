package com.mybank.dto;

import java.util.List;

public class BankDTO {


    private Long id;
    private String name;
    private String iban;
    private List<CustomerDTO> listCustomerDTO;
  

    public BankDTO() {
    }

    public BankDTO(Long id, String name, String iban, List<CustomerDTO> listCustomerDTO) {
        this.id = id;
        this.name = name;
        this.iban = iban;
        this.listCustomerDTO = listCustomerDTO;
        
    }

    public Long getId() {
        return id;
    }

    public void setId(Long id) {
        this.id = id;
    }

    public String getName() {
        return name;
    }

    public void setName(String name) {
        this.name = name;
    }

    
    public String getIban() {
		return iban;
	}

	public void setIban(String iban) {
		this.iban = iban;
	}

	public List<CustomerDTO> getListCustomerDTO() {
		return listCustomerDTO;
	}

	public void setListCustomerDTO(List<CustomerDTO> listCustomerDTO) {
		this.listCustomerDTO = listCustomerDTO;
	}

	@Override
    public String toString() {
		String customers = "";
		
        for(CustomerDTO customerDTO : this.listCustomerDTO){
        	customers = customers+'\''+customerDTO.toString();        	
        }
        return "Book{" +
                "id=" + id +
                ", name='" + name + '\''+
                ", iban='" + iban + '\''+
                ", ListCustomerDTO='" + customers + '\''+
                '}';
    }

}
