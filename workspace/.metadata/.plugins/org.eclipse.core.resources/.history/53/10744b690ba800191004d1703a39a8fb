package com.mybank;

import java.math.BigDecimal;
import java.util.ArrayList;
import java.util.List;

import org.springframework.stereotype.Component;

import com.mybank.dto.AccountDTO;
import com.mybank.dto.BankDTO;
import com.mybank.dto.CustomerDTO;
import com.mybank.dto.TransferDTO;

@Component
public class BankRepositoryDummy  {
	
	
	public List<AccountDTO> getAccountDTO(){
			
		List<AccountDTO> listAccount = new ArrayList<AccountDTO>();
		
		for (int i=0; i< 5; i++){
			int index = i+1;

			List<TransferDTO> listTransferDTO = new ArrayList<TransferDTO>();
			AccountDTO acc = new AccountDTO(new Long(index),"12345"+index, new BigDecimal(10000), listTransferDTO );
			listAccount.add(acc);
		}
		
		
		return listAccount;
		
	}

	public List<CustomerDTO> getCustomerDTO(){
		
		List<CustomerDTO> listCustomer = new ArrayList<CustomerDTO>();
		List<AccountDTO> listAccount = getAccountDTO();
		for (int i=0; i< 5; i++){
			int index = i+1;
			CustomerDTO cus = new CustomerDTO(new Long(index), "NAME"+index, "SURNAME"+index, listAccount.get(i));
			listCustomer.add(cus);
		}
		
		return listCustomer;
		
	}
	
	public List<BankDTO> getBankDTO(){
		
		List<BankDTO> listBanks = new ArrayList<BankDTO>();
		
		List<CustomerDTO> listCustomer = getCustomerDTO();
		List<CustomerDTO> listCustomerAux = new ArrayList<CustomerDTO>(); 
		listCustomerAux.add(listCustomer.get(0));
		listCustomerAux.add(listCustomer.get(1));
		
		BankDTO bank1 = new BankDTO(new Long(1), "BANK1", "IBAN1", listCustomerAux);		
		listBanks.add(bank1);
		
		listCustomerAux.clear();
		listCustomerAux.add(listCustomer.get(2));
		listCustomerAux.add(listCustomer.get(3));
		
		BankDTO bank2 = new BankDTO(new Long(2), "BANK2", "IBAN2", listCustomerAux);		
		listBanks.add(bank2);
		
		listCustomerAux.clear();
		listCustomerAux.add(listCustomer.get(4));
		
		BankDTO bank3 = new BankDTO(new Long(3), "BANK3", "IBAN3", listCustomerAux);		
		listBanks.add(bank3);
		
		
		return listBanks;
		
	}
}
